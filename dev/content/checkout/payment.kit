<!-- // make shapes in css rather than import every shape as svg/png? if so make those shapes into class variables or wutnot? -->
<section id="payment">
    <div>
        <section id="payment-content">
            <section id="payment-title">
                <h1>3. Payment</h1>
            </section>
            
            <section id="payment-inputs">
                <section id="payment-card">
                <form action="#">
                    <input type="select" name="Select Payment Method" placeholder="Select Payment Method">
                </form>
                    <form action="#">
                        <input type="number" name="Card Number" placeholder="Card Number">
                    </form>
                    <form action="#">
                        <input type="number" name="MM/YY" placeholder="MM/YY">
                    </form>
                    <form action="#">
                        <input type="number" name="CVV" placeholder="CVV">
                    </form>
                </section>

                <section id="payment-billing">
                    <h2>Billing Address</h2>
                    <section id="payment-billing-check">
                        <form action="#">
                            <input type="checkbox" name="Billing address is same as shipping address">
                        </form>
                        <h3>Billing address is same as shipping address</h3>
                    </section>
                    <section id="payment-billing-street">
                        <form action="#">
                            <input type="text" name="Street Address" placeholder="Street Address">
                        </form>
                        <form action="#">
                            <input type="text" name="Country" placeholder="Country">
                        </form>
                    </section>

                    <section id="payment-billing-apartment">
                        <form action="#">
                            <button><i class="fa-solid fa-plus"></i></button>
                        </form>
                        <h3>Apartment, Building, Floor</h3>
                    </section>
                    <section id="payment-billing-zip">
                        <form action="#">
                            <input type="number" name="ZIP Code" placeholder="ZIP Code">
                        </form>
                        <form action="#">
                            <input type="text" name="City" placeholder="City">
                        </form>
                        <form action="#">
                            <input type="text" name="State" placeholder="State">
                        </form>
                        <form action="#">
                            <input type="number" name="Phone Number" placeholder="Phone Number">
                        </form>
                    </section>
                </section>
            </section>  
        </section>
    </div>
</section>